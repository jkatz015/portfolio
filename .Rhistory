installed.packages("tinytex")
tinytex::install_tinytex()
knitr::opts_chunk$set(
echo = FALSE,
message = FALSE,
warning = FALSE,
fig.width = 8,
fig.height = 4
)
# Load libraries
library(tidyverse)
library(lubridate)
library(scales)
library(readxl)
library(forecast)
library(knitr)
library(kableExtra)
# Set theme
theme_set(theme_minimal(base_size = 10))
# Load and prep data
pizza <- read_excel("../data/raw/Data Model - Pizza Sales.xlsx") %>%
mutate(
order_date = as.Date(order_date),
order_hour = hour(hms(order_time)),
day_of_week = wday(order_date, label = TRUE, week_start = 1)
)
# Daily revenue
daily_revenue <- pizza %>%
group_by(order_date) %>%
summarise(revenue = sum(total_price), .groups = "drop") %>%
arrange(order_date)
